<style>
.custom-social-section {
  position: relative;
  width: 100%;
  height: 900px;
  padding: 0;
  display: flex;
  justify-content: center;
  align-items: center;
}

.social-container {
  display: grid;
  grid-template-columns: 1fr 1fr; /* Two equal-width columns */
  position: relative;
  width: 100%;
  height: 700px;
}

.social-image-container {
  position: relative;
}

.social-image {
  position: absolute;
  top: auto;
  bottom: auto;
  left: 0;
  right: 0;
  max-width: 100%;
  height: auto;
  object-fit: cover;
}

.social-content-container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
  padding: 0 20px;
}

.social-header {
  font-size: 2.2rem;
  line-height: 1.1em;
  margin-bottom: 37px;
  text-transform: uppercase;
}

.social-button {
  padding: 10px 20px;
  background-color: #F7CE48;
  color: #1A1A1A;
  border-radius: 100px;
  text-align: center;
  text-decoration: none;
  display: inline-block;
  font-size: 1rem;
  line-height: 1.5;
  transition: background-color 0.3s;
}

.social-button:hover {
  background-color: #1A1A1A;
  color: #F7CE48;
}

/* Media Queries */

/* For tablet devices (768px and smaller) */
@media (max-width: 768px) {
  .social-container {
    grid-template-columns: 1fr;
    height: auto;
    padding: 80px 20px;
  }

  .social-image {
    position: relative; /* Remove absolute positioning */
    width: 100%;
    height: auto;
    max-width: 100%;
    object-fit: contain;
    margin-left: -20px;
  }

  .social-header {
    font-size: 2.2rem;
    text-align: left;
  }

  .social-content-container {
    align-items: flex-start;
    text-align: left;
  }
}

/* For mobile devices (480px and smaller) */
@media (max-width: 480px) {
  .social-container {
    padding: 40px 20px;
  }

  .social-header {
    font-size: 2.2rem;
    text-align: left;
  }

  .social-image {
    width: 100%;
    height: auto;
    margin-bottom: 40px;
    position: relative;
  }
}

</style>






<section class="custom-social-section">
  <div class="social-container">

    <!-- Left Column (Image) -->
    <div class="social-image-container">
      <img src="https://cdn.shopify.com/s/files/1/0598/7201/8567/files/Snake.png?v=1727143751" width="664" height="660" alt="Snake Image" class="social-image">
    </div>

    <!-- Right Column (Header and Button) -->
    <div class="social-content-container">
      <h1 class="social-header">Follow Us on Social</h1>
      <a href="https://www.instagram.com/letsgetmiserable/" target="_blank" class="social-button">@LETSGETMISERABLE</a>
    </div>

  </div>
</section>
