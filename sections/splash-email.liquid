<style>

.custom-email-section {
  position: relative;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #FCF7EA;
  box-sizing: border-box;
}

.email-container {
  display: grid;
  grid-template-columns: 1fr 1fr;
  position: relative;
  width: 100%;
  padding: 80px 40px;
  max-width: 1280px;
  background: #F7CE48;
  border-radius: 20px;
  margin: 0 40px;
}

.email-title-container {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  height: 100%;
}

.email-content-container {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  font-size: 16px;
}

.email-content-container p {
  margin: 0;
  max-width: 390px;
  text-transform: uppercase;
}

.email-header {
  font-size: 34px;
  line-height: 1.1em;
  font-weight: 700;
  margin: 0;
  text-transform: uppercase;
  padding-left: 40px;
}

.newsletter-form {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding-top: 30px;
  width: 100%;
}

.email-input {
  padding: 14px;
  padding-left: 0;
  font-size: 16px;
  border: 0 none;
  background-color: transparent;
  border-bottom: 1px solid #1A1A1A;
  margin-right: 10px;
  width: 300px;
}

.email-input::placeholder {
  color: #1A1A1A;
  opacity: 1;
}

.email-submit-button {
  padding: 12px 20px;
  font-size: 16px;
  background-color: #1A1A1A;
  color: #F7CE48;
  border: none;
  border-radius: 25px;
  cursor: pointer;
  text-transform: uppercase;
  transition: background-color 0.3s ease;
  white-space: nowrap;
}

.email-submit-button:hover {
  background-color: #333;
}

/* Media Queries */

/* Tablet devices (768px and smaller) */
@media (max-width: 900px) {


  .email-container {
    grid-template-columns: 1fr 1fr;
    padding: 80px 20px;
    margin: 0 20px;
  }

  .email-header {
    padding-left: 0;
    text-align: left;
  }

  .email-content-container {
    align-items: flex-start;
    text-align: left;
  }

}

/* Mobile devices (480px and smaller) */
@media (max-width: 768px) {


  .email-container {
    grid-template-columns: 1fr ;
  padding: 40px 20px;
  position: relative;
  width: 100%;
  border-radius: 0px;
  margin: 0;
}

  .email-header {
    font-size: 34px;
    text-align: left;
    margin-bottom: 24px;
  }

  .email-content-container {
    align-items: flex-start;
    text-align: left;
  }

  .email-content-container p {
    max-width: 100%;
  }

  .email-input {
    width: 100%;
  }

  .newsletter-form {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  padding-top: 30px;
  width: 100%;
}

.email-input {
  margin-bottom: 20px;
}

}


</style>




<section class="custom-email-section">
  <div class="email-container">

    <div class="email-title-container">
      <h2 class="email-header">BE THE FIRST<br>TO KNOW.</h2>
    </div>

    <div class="email-content-container">
      <p>Be the first to know when we launch.</p>
        {% comment %} {% include 'newsletter.liquid' %} {% endcomment %}

{% if form.errors %}
  <p class="form-error">There was an error with your submission. Please try again.</p>
{% elsif form.posted_successfully? %}
  <p class="form-success">Thank you for subscribing!</p>
{% endif %}

<form method="post" action="/contact" accept-charset="UTF-8">
  <input type="hidden" name="form_type" value="customer">
  <input type="hidden" name="utf8" value="âœ“">
  <input type="hidden" name="contact[tags]" value="newsletter">
  <input type="email" name="contact[email]" placeholder="Email Address" required>
  <button type="submit">Join Now</button>
</form>


    </div>

  </div>
</section>