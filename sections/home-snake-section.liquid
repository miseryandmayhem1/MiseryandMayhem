{{ 'custom.css' | asset_url | stylesheet_tag }}

<section class=" snake-text-section color-{{ section.settings.color_scheme }}">
  <img src="{{ section.settings.snake_image | image_url }}" class="home-snake" width="" height="" alt="Snake">
  <div class="container main-contain">
    <!-- Snake Image (Left on Desktop, Top on Mobile) -->
    <div class="snake-image">

    </div>

    <!-- Text Section (Right on Desktop, Below on Mobile) -->
    <div class="text-content">
      <h2>{{ section.settings.header_title }}</h2>

      {% for block in section.blocks %}
        <p>
          <span class="text-highlight">{{ block.settings.highlighted_text }}</span>
          {{ block.settings.normal_text }}
        </p>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Snake and Text Section",
  "settings": [
    {
      "type": "image_picker",
      "id": "snake_image",
      "label": "Snake Image"
    },
    {
      "type": "text",
      "id": "header_title",
      "label": "Header Title",
      "default": "Header Title Here"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color Scheme",
      "default": "scheme-6"
    }
  ],
  "blocks": [
    {
      "type": "text_line",
      "name": "Text Line",
      "settings": [
        {
          "type": "text",
          "id": "highlighted_text",
          "label": "Highlighted Text",
          "default": "Highlighted Words"
        },
        {
          "type": "text",
          "id": "normal_text",
          "label": "Normal Text",
          "default": "Normal text for this line."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Snake and Text Section",
      "category": "Custom",
      "blocks": [
        {
          "type": "text_line",
          "settings": {
            "highlighted_text": "Explore",
            "normal_text": "the amazing world of snakes."
          }
        },
        {
          "type": "text_line",
          "settings": {
            "highlighted_text": "Learn",
            "normal_text": "about different species."
          }
        },
        {
          "type": "text_line",
          "settings": {
            "highlighted_text": "Protect",
            "normal_text": "these creatures and their habitats."
          }
        }
      ]
    }
  ]
}
{% endschema %}
