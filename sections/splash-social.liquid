    </div>

    <!-- Right Column (Header and Button) -->
    <div class="social-content-container">
      <h1 class="social-header">Follow Us on Social</h1>
      <a href="https://www.instagram.com/letsgetmiserable/" target="_blank" class="social-button">@LETSGETMISERABLE</a>
    </div>

  </div>
</section>