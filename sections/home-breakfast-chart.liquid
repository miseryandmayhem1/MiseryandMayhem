<section class="home-breakfast-chart-section">
  <div class="main-contain">
    <h2>{{ section.settings.heading }}</h2>
    <div class="home-breakfast-chart-image">
      <img src="{{ section.settings.image | img_url: 'master' }}" alt="{{ section.settings.alt_text }}" width="100%" height="auto">
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Home Breakfast Chart",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Your Heading Here"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Full Width Image"
    },
    {
      "type": "text",
      "id": "alt_text",
      "label": "Image Alt Text",
      "default": "Misery &amp; Mayhem is, pound for pound, better than all other breakfast options listed here."
    }
  ],
  "presets": [
    {
      "name": "Home Breakfast Chart",
      "category": "Image"
    }
  ]
}
{% endschema %}
