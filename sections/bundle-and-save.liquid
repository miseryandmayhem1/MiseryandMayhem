<section class="bundle-and-save-section color-{{ section.settings.color_scheme }}">
  <div class="main-contain">
  <div class="bundle-content">
    <!-- Left Side: Title, Description, Button, Prices -->
    <div class="left-content">
      <h2>{{ section.settings.title }}</h2>
      <p>{{ section.settings.description }}</p>
      <p>{{ section.settings.second_description }}</p>

      <!-- Add to Cart Button and Prices -->
      {% assign product = all_products[section.settings.bundle_product] %}
      {% if product %}
        <form method="post" action="/cart/add" class="bundle-form">
          <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">

          <!-- Add to Cart Button -->
          <button type="submit" class="standard-button">{{ section.settings.button_text }}</button>

          <!-- Prices next to button -->
          <div class="price-wrapper">
            <span class="sale-price">{{ product.selected_or_first_available_variant.price | money }}</span>
            {% if product.selected_or_first_available_variant.compare_at_price > product.selected_or_first_available_variant.price %}
              <span class="original-price"><s>{{ product.selected_or_first_available_variant.compare_at_price | money }}</s></span>
            {% endif %}
          </div>
        </form>
      {% else %}
        <p>Product not found. Please select a valid product.</p>
      {% endif %}
    </div>

    <!-- Right Side: Image -->
    <div class="right-content">
      <img src="{{ section.settings.bundle_image | image_url }}" alt="Bundle Image">
    </div>

  </div>
  </div>
</section>




{% schema %}
{
  "name": "Bundle and Save",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Bundle and Save"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Get the best value by bundling three of our top products!"
    },
    {
      "type": "textarea",
      "id": "second_description",
      "label": "Second Description",
      "default": "Limited time offer, don't miss out!"
    },
    {
      "type": "product",
      "id": "bundle_product",
      "label": "Select Bundle Product"
    },
    {
      "type": "image_picker",
      "id": "bundle_image",
      "label": "Bundle Image"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Add to Cart"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color Scheme",
      "default": "background-1"
    }
  ],
  "presets": [
    {
      "name": "Bundle and Save",
      "category": "Product"
    }
  ]
}
{% endschema %}
