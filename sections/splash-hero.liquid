  justify-content: center;
  align-items: center;
  overflow: hidden;
  position: relative;
  background-color: #000;
  box-sizing: border-box;
}

@media (min-width: 1400px) {

  .splash-hero {
    max-height: 900px;
  }

}

.video-container {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  overflow: hidden;
}

.video-container video {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
}

body {
  overflow-x: hidden;
}

.hero-image {
  position: absolute;
  top: 20px;
  right: auto;
  left: auto;
}

@media (max-width: 767px) {

  .splash-hero-mobile {display: flex;}
  .splash-hero {display: none;}

}

@media (min-width: 768px) {
  .splash-hero-mobile {display: none;}
  .splash-hero {display: flex;}

}

</style>






